<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="scorecard.list">
      <field name="name">scorecard list</field>
      <field name="model">scorecard.scorecard</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="scorecard.action_window">
      <field name="name">scorecard window</field>
      <field name="res_model">scorecard.scorecard</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="scorecard.action_server">
      <field name="name">scorecard server</field>
      <field name="model_id" ref="model_scorecard_scorecard"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="scorecard" id="scorecard.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="scorecard.menu_1" parent="scorecard.menu_root"/>
    <menuitem name="Menu 2" id="scorecard.menu_2" parent="scorecard.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="scorecard.menu_1_list" parent="scorecard.menu_1"
              action="scorecard.action_window"/>
    <menuitem name="Server to list" id="scorecard" parent="scorecard.menu_2"
              action="scorecard.action_server"/>

  </data>
</odoo>